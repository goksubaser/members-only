<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<div id="posts">
  <% @posts.each do |post| %>
    <!--<%= post.title%>-->
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
<%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %>

